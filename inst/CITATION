         doi = "10.1080/10618600.2017.1322091",
         textVersion = "Kastner, Gregor, Sylvia FrÃ¼hwirth-Schnatter and Hedibert Freitas Lopes (2017). Efficient Bayesian Inference for Multivariate Factor Stochastic Volatility Models. Journal of Computational and Graphical Statistics, 26(4), 905-917. URL: https://doi.org/10.1080/10618600.2017.1322091"
)

citEntry(header = "To refer to the shrinkage methodology used in factorstochvol (NG priors) please cite:",
         entry = "article",
         title = "Sparse {B}ayesian Time-Varying Covariance Estimation in Many Dimensions",
         author = personList(as.person("Gregor Kastner")),
         journal = "Journal of Econometrics",
         year = "2019",
	 volume = "210",
	 number = "1",
	 pages = "98--115",
